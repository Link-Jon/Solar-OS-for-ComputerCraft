term.clear()
term.setCursorPos(1, 1)
print("Cactus OS Arizona")
print("Loading... ... ... ...")
local function clearLineWrite(str)
  local cx,cy = term.getCursorPos()
  local scr_x, scr_y = term.getSize()
  term.setCursorPos(1,cy)
  term.write(str:rep(scr_x):sub(1,scr_x))
  term.setCursorPos(cx,cy)
end
  term.setCursorPos(1, 3)
  clearLineWrite("*")
  textutils.slowPrint("Cactus OS, Designed and Made in Arizona!")
  textutils.slowPrint("Thank you for using Cactus OS.")
  clearLineWrite("*")
  textutils.slowPrint("Now starting Cactus OS...")
shell.run(".menu") --'shell' doesn't work if you use os.run
